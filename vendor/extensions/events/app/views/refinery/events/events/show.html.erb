<% content_for :body_content_title do %>
  <%= @event.artist_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Active</h1>
    <p>
      <%=raw @event.active %>
    </p>
  </section>
  <section>
    <h1>Artist Name</h1>
    <p>
      <%=raw @event.artist_name %>
    </p>
  </section>
  <section>
    <h1>Intro</h1>
    <p>
      <%=raw @event.intro %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @event.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
  <section>
    <h1>Extended Description</h1>
    <p>
      <%=raw @event.extended_description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @event.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Image Tag Line</h1>
    <p>
      <%=raw @event.image_tag_line %>
    </p>
  </section>
  <section>
    <h1>Start Date</h1>
    <p>
      <%=raw @event.start_date %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @event.end_date %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @event.hours %>
    </p>
  </section>
  <section>
    <h1>Address1</h1>
    <p>
      <%=raw @event.address1 %>
    </p>
  </section>
  <section>
    <h1>Address2</h1>
    <p>
      <%=raw @event.address2 %>
    </p>
  </section>
  <section>
    <h1>Address3</h1>
    <p>
      <%=raw @event.address3 %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @event.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @event.state %>
    </p>
  </section>
  <section>
    <h1>Zip Code</h1>
    <p>
      <%=raw @event.zip_code %>
    </p>
  </section>
  <section>
    <h1>Phone Number</h1>
    <p>
      <%=raw @event.phone_number %>
    </p>
  </section>
  <section>
    <h1>Website</h1>
    <p>
      <%=raw @event.website %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.artist_name, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
