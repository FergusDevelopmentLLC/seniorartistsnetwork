<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @event[:active] -%>
  </div>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>



    <div class='field'>
      <%= f.label :artist_name -%>
      <%= f.text_field :artist_name -%>
    </div>



  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description, :extended_description, :hours],
                :object => "events/event" -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @event.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :image_tag_line -%>
    <%= f.text_field :image_tag_line -%>
  </div>

  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.date_select :start_date, :order => [:month, :day, :year] %>
  </div>

  <div class='field'>
    <%= f.label :end_date -%>
    <%= f.date_select :end_date, :order => [:month, :day, :year] %>
  </div>

    <div class='field'>
      <%= f.label :hide_start_end_date -%>
      <%= f.check_box :hide_start_end_date, :checked => @event[:hide_start_end_date] -%>
    </div>

  <div class='field'>
    <%= f.label :address1 -%>
    <%= f.text_field :address1 -%>
  </div>

  <div class='field'>
    <%= f.label :address2 -%>
    <%= f.text_field :address2 -%>
  </div>

  <div class='field'>
    <%= f.label :address3 -%>
    <%= f.text_field :address3 -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

    <div class='field'>
      <%= f.label "State" -%>
      <%= f.select :state, us_states, { :include_blank => "Select state" } %>
    </div>

  <div class='field'>
    <%= f.label :zip_code -%>
    <%= f.text_field :zip_code -%>
  </div>

  <div class='field'>
    <%= f.label :phone_number -%>
    <%= f.text_field :phone_number -%>
  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.artist_name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
