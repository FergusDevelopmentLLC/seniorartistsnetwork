<% content_for :body_content_title do %>
  <%= @member.firstname %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Firstname</h1>
    <p>
      <%=raw @member.firstname %>
    </p>
  </section>
  <section>
    <h1>Lastname</h1>
    <p>
      <%=raw @member.lastname %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @member.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @member.bio %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="members">
      <% @members.each do |member| %>
        <li>
          <%= link_to member.firstname, refinery.members_member_path(member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
