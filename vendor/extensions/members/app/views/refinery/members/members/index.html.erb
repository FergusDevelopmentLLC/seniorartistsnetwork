<div id='members-list'>
    <h1>SAN Members</h1>
    <% if @members.count == 0 %>
    <p id="no-data-to-display">No members to display.</p>
    <% else %>
    <div class="member-grid">
        <% @members.each do |member| %>
        <%if !(member.bio == nil) && !(member.bio.blank?)%>
        <div class="col-1-8 has-tooltip">
        <%else%>
        <div class="col-1-8">
        <%end%>
            <div class="img-container">
            <% if (member.photo != nil) then %>
                <% if (member.detail_photo != nil) then %>
                    <a href='<%= member.detail_photo.url %>'><img src='<%= member.photo.url %>' alt='<%= member.full_name %>'/></a>
                <% else %>
                    <img src='<%= member.photo.url %>' alt='<%= member.full_name %>'/>
                <% end %>
            <%else%>
                <img src='/assets/san-100-100.png' alt="Senior Artists Network"/>
            <% end %>
            </div>
            <div class="member-name">
            <% if (!member.url.nil? and !member.url.blank?) then %>
                <%= link_to member.full_name, member.url %>
            <% else %>
                <%= member.full_name%>
            <% end %>
            </div>
        </div>
        <div class="hidden"><%=raw member.bio%></div>
        <% end %>
    </div>
    <% end %>
</div>
<%=will_paginate @members, renderer: PaginationListLinkRenderer %>
<script type="text/javascript">
    (function ($) {//so i can use $ inside

        $(function() {//document.ready
            $('.has-tooltip').each(function() { // Notice the .each() loop, discussed below
                $(this).qtip({
                    content: {
                        text: $(this).next('div') // Use the "div" element next to this for the content
                    },
                    style: {
                        classes: 'qtip'
                    },
                    position: {
                        my: 'left center',  // Position my top left...
                        at: 'right center', // at the bottom right of...
                        target: $(this) // my target
                    }
                });
            });
        });

    }(jQuery));
</script>