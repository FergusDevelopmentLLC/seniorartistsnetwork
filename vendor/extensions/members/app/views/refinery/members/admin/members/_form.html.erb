<%= form_for [refinery, :members_admin, @member] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @member,
              :include_object_name => true %>

  <div class='field'>
      <%= f.check_box :active %> Active?
   </div>

    <div class='field'>
      <%= f.label :grid_image_100_x_100px -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :photo_id,
                 :image => @member.photo,
                 :toggle_image_display => false -%>
    </div>

    <div class='field'>
      <%= f.label :full_size_grid_image -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :detail_photo_id,
                 :image => @member.detail_photo,
                 :toggle_image_display => false -%>
    </div>

  <div class='field'>
    <%= f.label "First name"-%>
    <%= f.text_field :firstname -%>
  </div>



  <div class='field'>
    <%= f.label "Middle name" -%>
    <%= f.text_field :middlename -%>
  </div>
  
  <div class='field'>
    <%= f.label "Last name" -%>
    <%= f.text_field :lastname -%>
  </div>

    <div class='field'>
      <%= f.label "Full name" -%>
      <%= f.text_field :full_name -%>
    </div>

    <div class='field'>
      <%= f.label "Special status" -%>
      <%= f.text_field :special_status -%>
    </div>

    <div class='field'>
      <%= f.label "Year joined" -%>
      <%= f.text_field :year_joined, { :class => 'text-short' } -%>
    </div>



    <div class='field'>
      <%= f.label "Email" -%>
      <%= f.text_field :email -%>
    </div>

    <div class='field'>
      <%= f.label "Address 1" -%>
      <%= f.text_field :address1 -%>
    </div>

    <div class='field'>
      <%= f.label "Address 2" -%>
      <%= f.text_field :address2 -%>
    </div>

    <div class='field'>
      <%= f.label "Address 3" -%>
      <%= f.text_field :address3 -%>
    </div>

    <div class='field'>
      <%= f.label "City" -%>
      <%= f.text_field :city -%>
    </div>

    <div class='field'>
      <%= f.label "State" -%>
      <%= f.select :state, us_states, { :include_blank => "Select state" } %>
    </div>

    <div class='field'>
      <%= f.label "Zip code" -%>
      <%= f.text_field :zip_code, { :class => 'text-short' } -%>
    </div>

    <div class='field'>
      <%= f.label "Phone number" -%>
      <%= f.text_field :phone_number, { :class => 'text-short' } -%>
    </div>


  
  <div class='field'>
    <%= f.label "Personal url" -%>
    <%= f.text_field :url -%>
  </div>
  
  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio],
                :object => "members/member" -%>
  </div>
  
  

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.members.admin.members.member'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @member.firstname) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
